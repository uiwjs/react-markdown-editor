{
  "name": "@uiw/react-markdown-editor",
  "version": "5.0.0",
  "description": "A markdown editor with preview, implemented with React.js and TypeScript.",
  "homepage": "https://uiwjs.github.io/react-markdown-editor",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "scripts": {
    "prepare": "npm run build && husky install",
    "released": "npm run build && npm run doc",
    "doc": "kkt build --app-src ./website",
    "start": "kkt start --app-src ./website",
    "css:watch": "compile-less -d src -o esm --watch",
    "css:build": "compile-less -d src -o esm",
    "css:build:dist": "compile-less -d src --combine markdown-editor.css --rm-global",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "pretty-quick": "pretty-quick --staged",
    "watch": "tsbb watch & npm run css:watch",
    "build": "tsbb build && npm run css:build && npm run css:build:dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uiwjs/react-markdown-editor"
  },
  "author": "Kenny Wong <wowohoo@qq.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "files": [
    "src/**/*.{ts,tsx,less}",
    "markdown-editor.css",
    "cjs",
    "esm"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.0.0",
    "@codemirror/language-data": "^6.1.0",
    "@uiw/codemirror-themes": "^4.10.4",
    "@uiw/react-codemirror": "^4.10.4",
    "@uiw/react-markdown-preview": "^4.0.20"
  },
  "devDependencies": {
    "@kkt/less-modules": "^7.2.0",
    "@kkt/raw-modules": "^7.2.0",
    "@kkt/scope-plugin-options": "^7.2.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@uiw/react-github-corners": "^1.5.14",
    "@uiw/reset.css": "^1.0.6",
    "@wcj/dark-mode": "^1.0.14",
    "compile-less-cli": "^1.8.13",
    "kkt": "^7.2.0",
    "prettier": "^2.7.1",
    "pretty-quick": "~3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsbb": "^3.7.6",
    "husky": "^8.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
