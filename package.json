{
  "name": "@uiw/react-markdown-editor",
  "version": "3.1.3",
  "description": "A markdown editor with preview, implemented with React.js and TypeScript.",
  "homepage": "https://uiwjs.github.io/react-markdown-editor",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "typings": "lib/cjs/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "released": "npm run build && npm run doc",
    "doc": "kkt build --app-src ./website",
    "start": "kkt start --app-src ./website",
    "build": "npm run ts:build && npm run types:esm && npm run types:cjs && npm run css:build && npm run css:build:dist",
    "types:build": "tsbb types --sourceRoot src --target ESNEXT",
    "types:watch": "npm run types:esm -- --watch & npm run types:cjs -- --watch",
    "types:esm": "npm run types:build -- --outDir ../lib/esm",
    "types:cjs": "npm run types:build -- --outDir ../lib/cjs",
    "watch": "npm run ts:watch & npm run types:watch & npm run css:watch",
    "ts:watch": "tsbb watch --env-name esm:dev --env-name cjs --target react",
    "ts:build": "tsbb build --target react",
    "css:watch": "compile-less -d src -o lib/esm --watch",
    "css:build": "compile-less -d src -o lib/esm",
    "css:build:dist": "compile-less -d src --combine dist/markdown-editor.css --rm-global"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uiwjs/react-markdown-editor"
  },
  "author": "Kenny Wong <wowohoo@qq.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.7.0",
    "react-dom": ">=16.7.0"
  },
  "files": [
    "lib",
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "dependencies": {
    "@uiw/react-markdown-preview": "2.1.3",
    "codemirror": "5.61.0"
  },
  "devDependencies": {
    "@kkt/less-modules": "6.8.3",
    "@kkt/raw-modules": "6.8.3",
    "@kkt/scope-plugin-options": "6.9.0",
    "@types/codemirror": "0.0.109",
    "@types/jest": "26.0.22",
    "@types/prop-types": "15.7.3",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@uiw/react-github-corners": "1.2.0",
    "@uiw/reset.css": "1.0.4",
    "babel-plugin-transform-remove-imports": "1.5.2",
    "compile-less-cli": "1.7.0",
    "kkt": "6.8.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tsbb": "2.1.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
